@model ProductUpdateVM

<h1>Product add page</h1>

<form asp-controller="Product" asp-action="Update" method="post" class="row g-3" enctype="multipart/form-data">
    <div class="text-danger" asp-validation-summary="All">
    </div>

    <div class="col-md-12">
        <label for="1" class="form-label">Product Name</label>
        <input asp-for="Name" class="form-control" id="1">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="col-md-4">
        <label for="2" class="form-label">Product Price</label>
        <input asp-for="Price" type="number" step="0.1" class="form-control" id="2">
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>

    @if (Model.ImageName != null)
    {
        <img class="update-img" src="~/img/@Model.ImageName" style="width:100px" />
    }

    <div class="col-md-4">
        <label for="5" class="form-label">Photo</label>
        <input asp-for="Photo" class="form-control img-input" id="5">
        <span class="text-danger" asp-validation-for="Photo"></span>
    </div>

    <input asp-for="Id" type="hidden">

    <div class="col-md-4">
        <label for="4" class="form-label">Type</label>
        <select asp-for="ProductCategoryId" asp-items="@Model.Category">
            <option>Please select one</option>
        </select>
    </div>


    <div class="col-12">
        <button type="submit" class="btn btn-primary">Update product</button>
    </div>
</form>

@section ValidationScript{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}

@section PageScripts{
    <script src="~/js/ProductUpdate.js"></script>
}